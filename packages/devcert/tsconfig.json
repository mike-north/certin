{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "strict": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceRoot": ".",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": false,
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src"]
}
