{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2018"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@certin/messages": [
        "../../node_modules/@certin/messages/dist/messages-private.d.ts"
      ],
      "@certin/types": [
        "../../node_modules/@certin/types/dist/types-private.d.ts"
      ],
      "*": ["../../types/*"]
    }
  },
  "include": ["src"]
}
