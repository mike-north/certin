{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2018"],
    "types": ["debug", "node", "is-ci", "yargs"],
    "baseUrl": ".",
    "paths": {
      "@certin/core": [
        "../../node_modules/@certin/core/dist/core-private.d.ts"
      ],
      "@certin/cliux": [
        "../../node_modules/@certin/cliux/dist/cliux-private.d.ts"
      ],
      "@certin/utils": [
        "../../node_modules/@certin/utils/dist/utils-private.d.ts"
      ],
      "@certin/types": [
        "../../node_modules/@certin/types/dist/types-private.d.ts"
      ],
      "*": ["../../types/*"]
    }
  },
  "include": ["src"]
}
