{
  "name": "@certin/workspace",
  "version": "0.0.0-dev.0",
  "main": "index.js",
  "repository": "https://github.com/mike-north/certutils",
  "author": "Mike North <michael.l.north@gmail.com> ",
  "license": "BSD-2-Clause",
  "private": true,
  "devDependencies": {
    "@types/node": "^13.5.0",
    "@types/qunit": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "lerna": "^3.20.2",
    "qunit": "^2.9.3",
    "rimraf": "^3.0.1",
    "scripty": "^1.9.1",
    "shellcheck": "^0.4.1",
    "typescript": "^3.7.5"
  },
  "optionalDependencies": {
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.1",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "ver": "scripty",
    "clean": "SCRIPTY_SILENT=true lerna run clean --parallel && rimraf temp 'docs/**/*.md'",
    "build": "mv docs/_config.yml ./ && rimraf temp docs && yarn build:packages && yarn build:docs && mv ./_config.yml docs",
    "build:packages": "lerna run build",
    "build:docs": "api-documenter markdown -i temp -o docs",
    "lint": "yarn lint:sh && yarn lint:js",
    "lint:sh": "shellcheck scripts/**/*.sh",
    "lint:js": "lerna exec 'yarn lint'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "10.18.1",
    "yarn": "1.21.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "8.10 - 8.17 || 10.* || >= 12.*"
  }
}
